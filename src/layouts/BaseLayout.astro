---
// src/layouts/BaseLayout.astro
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=VT323&display=swap" rel="stylesheet">
  </head>
  <body>
    <div class="crt-overlay"></div>
    <div class="scanline"></div>
    
    <div class="content">
      <slot />
    </div>
  </body>
</html>

<style is:global>
  /* 3. THEME VARIABLES */
  :root {
    --bg-color: #050505;       /* Deep Black */
    --text-main: #4af626;      /* Phosphor Green (Standard text) */
    --text-dim: #2c8f1b;       /* Dim Green (Descriptions) */
    --accent: #00ff41;         /* Bright Green (Prompts, Links) */
    --border: #1a3c1a;         /* Dark Green Border */
    --scanline: rgba(18, 16, 16, 0.5); 
  }

  /* RESET & BASE STYLES */
  html, body {
    margin: 0;
    padding: 0;
    background-color: var(--bg-color);
    color: var(--text-main);
    font-family: 'VT323', monospace; /* The retro font */
    font-size: 18px; /* VT323 needs to be slightly larger to be readable */
    overflow-x: hidden;
  }

  * {
    box-sizing: border-box;
  }

  /* SCROLLBAR STYLING */
  ::-webkit-scrollbar {
    width: 10px;
  }
  ::-webkit-scrollbar-track {
    background: var(--bg-color);
  }
  ::-webkit-scrollbar-thumb {
    background: var(--text-dim);
    border: 1px solid var(--accent);
  }

  /* CRT EFFECTS (Optional but cool) */
  .crt-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background: radial-gradient(circle, rgba(18, 16, 16, 0) 50%, rgba(0, 0, 0, 0.6) 100%);
    pointer-events: none;
    z-index: 999;
  }

  .scanline {
    width: 100%;
    height: 100px;
    z-index: 999;
    background: linear-gradient(0deg, rgba(0,0,0,0) 0%, rgba(51, 255, 51, 0.04) 50%, rgba(0,0,0,0) 100%);
    opacity: 0.1;
    position: fixed;
    bottom: 100%;
    animation: scanline 10s linear infinite;
    pointer-events: none;
  }

  @keyframes scanline {
    0% { bottom: 100%; }
    100% { bottom: -100%; }
  }

  /* GLOW EFFECT ON TEXT */
  h1, h2, h3, .prompt {
    text-shadow: 0 0 5px rgba(74, 246, 38, 0.5);
  }
  
  a {
    color: var(--accent);
    text-decoration: none;
    border-bottom: 1px dashed var(--text-dim);
    transition: all 0.2s ease;
  }
  
  a:hover {
    background-color: var(--accent);
    color: var(--bg-color);
    box-shadow: 0 0 10px var(--accent);
  }
</style>
