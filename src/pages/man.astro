<style>
  .man-page {
    max-width: 850px;
    margin: 0 auto;
    padding: 3rem 1.5rem;
    font-family: 'Fira Code', monospace;
    line-height: 1.6;
  }

  .man-header,
  .man-footer {
    text-align: center;
    color: var(--gray);
    margin: 2rem 0;
    opacity: 0.7;
  }

  .man-section {
    margin: 3rem 0;
    padding: 1.5rem;
    border: 1px solid var(--border);
    background: var(--bg-soft);
    position: relative;
  }

  /* Terminal Tab effect for each section */
  .man-section::before {
    position: absolute;
    top: -12px;
    left: 10px;
    background: var(--bg-hard);
    padding: 0 10px;
    color: var(--gray);
    font-size: 0.75rem;
    font-weight: normal;
  }

  .man-section:nth-of-type(1)::before { content: "name.txt"; }
  .man-section:nth-of-type(2)::before { content: "synopsis.sh"; }
  .man-section:nth-of-type(3)::before { content: "description.md"; }
  .man-section:nth-of-type(4)::before { content: "options.conf"; }
  .man-section:nth-of-type(5)::before { content: "experience.log"; }
  .man-section:nth-of-type(6)::before { content: "projects.json"; }
  .man-section:nth-of-type(7)::before { content: "achievements.txt"; }
  .man-section:nth-of-type(8)::before { content: "education.yaml"; }
  .man-section:nth-of-type(9)::before { content: "metrics.csv"; }
  .man-section:nth-of-type(10)::before { content: "availability.md"; }
  .man-section:nth-of-type(11)::before { content: "exit_status.c"; }
  .man-section:nth-of-type(12)::before { content: "see_also.links"; }
  .man-section:nth-of-type(13)::before { content: "bugs.report"; }

  .man-section h2 {
    color: var(--yellow);
    font-size: 1.1rem;
    font-weight: 700;
    margin: 0 0 1rem 0;
    text-transform: uppercase;
  }

  .man-section h2::before {
    content: 'λ ';
    color: var(--green);
  }

  .man-section h3 {
    color: var(--orange);
    font-size: 1rem;
    margin: 1.5rem 0 0.5rem 0;
    font-weight: 600;
  }

  .indent {
    margin-left: 1.5rem;
    color: var(--fg);
    opacity: 0.9;
  }

  .man-options {
    margin-left: 1.5rem;
  }

  .man-options dt {
    color: var(--green);
    font-weight: 700;
    margin-top: 1rem;
  }

  .man-options dt::before {
    content: ':: ';
    color: var(--green);
  }

  .man-options dd {
    margin-left: 2rem;
    color: var(--gray);
    margin-top: 0.25rem;
  }

  .job,
  .project {
    margin: 2rem 0 2rem 1.5rem;
    padding: 1rem;
    border-left: 2px solid var(--border);
  }

  .job:hover,
  .project:hover {
    border-left-color: var(--gray);
  }

  .job-date {
    color: var(--gray);
    font-size: 0.85rem;
    margin: 0.25rem 0 0.75rem 0;
    opacity: 0.8;
  }

  .man-section ul {
    margin-left: 2rem;
    list-style-type: none;
  }

  .man-section li {
    margin: 0.5rem 0;
    padding-left: 1.5rem;
    position: relative;
  }

  .man-section li::before {
    content: '▸';
    position: absolute;
    left: 0;
    color: var(--green);
  }

  .metrics-display {
    margin: 1rem 0;
    padding: 1rem;
    color: var(--green);
    font-size: 0.85rem;
    line-height: 1.4;
    border: 1px solid var(--border);
    background: var(--bg-hard);
  }

  .man-section a {
    color: var(--aqua);
    text-decoration: none;
    border-bottom: 1px solid transparent;
    transition: border-bottom-color 0.2s ease;
  }

  .man-section a:hover {
    border-bottom-color: var(--green);
    color: var(--green);
  }

  @media (max-width: 768px) {
    .man-page {
      padding: 2rem 1rem;
    }

    .man-section {
      padding: 1rem;
    }

    .indent,
    .man-options,
    .job,
    .project {
      margin-left: 0.5rem;
    }

    .man-section ul {
      margin-left: 1rem;
    }

    .metrics-display {
      font-size: 0.7rem;
    }
    .metrics-display {
  font-family: 'JetBrains Mono', monospace;
  line-height: 1.2;
  color: var(--green); /* Gruvbox green looks sick for boxes */
  background: var(--bg-soft);
  padding: 1rem;
  display: inline-block; /* Keeps the box tight to the content */
  white-space: pre;      /* Essential for ASCII */
  border-radius: 4px;
}
  }
</style>
