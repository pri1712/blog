    </pre>
  </div>
</BaseLayout>

<style>
  .man-page {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem 1rem;
    font-family: 'Courier New', monospace;
    line-height: 1.6;
  }

  .man-header,
  .man-footer {
    text-align: center;
    color: var(--comment, #637777);
    margin: 2rem 0;
  }

  .man-section {
    margin: 2rem 0;
  }

  .man-section h2 {
    color: var(--accent, #00ff41);
    font-size: 1.1rem;
    font-weight: bold;
    margin-bottom: 0.75rem;
    text-transform: uppercase;
  }

  .man-section h3 {
    color: var(--foreground, #d6deeb);
    font-size: 1rem;
    margin: 1rem 0 0.5rem 0;
  }

  .indent {
    margin-left: 2rem;
  }

  .man-options {
    margin-left: 2rem;
  }

  .man-options dt {
    color: var(--accent, #00ff41);
    font-weight: bold;
    margin-top: 0.75rem;
  }

  .man-options dd {
    margin-left: 2rem;
    color: var(--comment, #637777);
  }

  .job,
  .project {
    margin: 1.5rem 0 1.5rem 2rem;
  }

  .job-date {
    color: var(--comment, #637777);
    font-size: 0.9rem;
    margin: 0.25rem 0;
  }

  .man-section ul {
    margin-left: 3rem;
    list-style-type: '▸ ';
  }

  .man-section li {
    margin: 0.5rem 0;
    padding-left: 0.5rem;
  }

  .metrics-display {
    margin-left: 2rem;
    color: var(--accent, #00ff41);
    font-size: 0.9rem;
    line-height: 1.4;
  }

  .man-section a {
    color: var(--secondary, #8be9fd);
    text-decoration: underline;
  }

  .man-section a:hover {
    color: var(--accent, #00ff41);
  }

  @media (max-width: 768px) {
    .man-page {
      padding: 1rem 0.5rem;
    }

    .indent,
    .man-options,
    .job,
    .project {
      margin-left: 1rem;
    }

    .man-section ul {
      margin-left: 2rem;
    }

    .metrics-display {
      font-size: 0.7rem;
    }
  }
</style>
