---
// src/pages/man.astro
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="man priyanshu">
  <div class="man-page">
    <pre class="man-header">
PRIYANSHU(1)              User Commands              PRIYANSHU(1)
